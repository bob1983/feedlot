{
  "1404-64": {
    "distro": "ubuntu",
    "description": "example Ubuntu LTS 1404 amd64 vagrant build",
    "arch": "amd64",
    "image": "server",
    "release": "14.04",
    "builder_types": [
      "virtualbox-iso"
    ],
    "builders": {
      "common": {
        "settings": [
          "ssh_wait_timeout = 30m"
        ]
      }
    },
    "provisioners": {
      "scripts": [
        "vagrant.sh",
	"sudoers.sh",
	"setup.sh",
	"cleanup.sh"
      ]
    }
  },
