{
  "centos7_x86_64": {
    "distro": "centos",
    "description": "Centos 7 x86_64 w virtualbox-iso only",
    "arch": "x86_64",
    "release": "7",
    "builder_types": [
      "virtualbox-iso",
      "vmware-iso"
    ],
    "post_processor_types": [
      "vagrant"
    ],
    "provisioner_types": [
      "shell"
    ]
  },
  "jessie_amd64-salt-masterless": {
    "distro": "debian",
    "description": "debian jessie amd64 using salt-masterless",
    "arch": "amd64",
    "release": "8",
    "builder_types": [
      "virtualbox-iso"
    ],
    "post_processor_types": [
      "vagrant"
    ],
    "provisioner_types": [
      "salt-masterless"
    ],
    "builders": {
      "virtualbox-iso": {
        "arrays": {
          "vboxmanage": [
            "--memory=4096"
          ]
        }
      }
    }
  }
}	
