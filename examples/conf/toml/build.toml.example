# Builds are named configurations that specify the distro to use, at minimum, and 
# define the final overrides and settings for generating a Packer Template. The 
# generated Packer template will be the result of merging the settings within the
# build configuration with the Rancher and distro defaults.
[1404-amd64]
	distro = "ubuntu"
	description = "ubuntu LTS 1404 amd64 server build, minimal install"
	arch = "amd64"
	image = "server"
	release = "14.04"
	builder_types = [
		"virtualbox-iso"
	]
	post_processor_types = [
		"vagrant"
	]
	provisioner_types = [
		"shell"
	]
	[1404-amd64.builders]
		[1404-amd64.builders.common]
			settings = [
				"ssh_wait_timeout = 300m"
			]
			[1404-amd64.builders.virtualbox-iso.arrays]
				vboxmanage = [
					"memory=4096"
				]
[centos7_x86_64]
	distro = "centos"
	description = "Centos 7 x86_64 w virtualbox-iso only"
	arch: x86_64
	release: "7"
	builder_types = [
		"virtualbox-iso"
	]
	post_processor_types = [
		"vagrant"
	]
	provisioner_types = [
		"shell"
	]

[jessie_amd64]
	distro = "debian"
	description = "debian jessie"
	arch = "amd64"
	release = "8"
	builder_types = [
		"virtualbox-iso"
	]
	post_processor_types = [
		"vagrant"
	]
	provisioner_types = [
		"shell"
	]
	[jessie.builders]
		[jessie.builders.virtualbox-iso.arrays]
			vboxmanage = [
				"--memory=4096"
			]
	[jessie_amd64.provisioners]
		[jessie_amd64.provisioners.shell]
			[jessie_amd64.provisioners.shell.arrays]
				scripts = [ 
					"setup.sh",
					"sudoers.sh",
					"vagrant.sh",
					"customize.sh",
					"cleanup.sh",
				]
