<seelog type="adaptive" mininterval="2000000" maxinterval="100000000" critmsgcount="50">
    <exceptions>
        <exception funcpattern="*test*" filepattern="tests.go"/>
        <exception filepattern="test*" minlevel="trace"/>
	</exceptions>
    <outputs>
        <splitter formatid="all">
            <file path="logs/rancher.log"/>
            <filter levels="critical, error">
                <console formatid="red"/>
            </filter>
            <filter levels="warn">
                <console formatid="yellow"/>
            </filter>
            <filter levels="info">
                <console formatid="green"/>
            </filter>
            <filter levels="debug">
                <console formatid="blue"/>
            </filter>
            <filter levels="trace">
                <console formatid="magenta"/>
            </filter>
        </splitter>
	</outputs>
	<formats>
		<format id="fmtinfo" format="[%Level] [%Time] %Msg%n"/>
        <format id="fmtdetail" format="[%LEV] [%Time] [%FuncShort @ %File.%Line] %Msg%n"/>
       	<format id="all" format="[%Lev] [%Time] [@ %File.%Line] %Msg%n"/>
       	<format id="blue"  format="%EscM(34)[%Level]%EscM(39) [%Time] [%EscM(34;1)%FuncShort %EscM(39) %EscM(;1)@ %File.%Line%EscM(;0)] %Msg%n%EscM(0)"/>
	<format id="green"  format="%EscM(32)[%Level]%EscM(39) [%Time] [%EscM(32;1)%FuncShort %EscM(39) %EscM(;1)@ %File.%Line%EscM(;0)] %Msg%n%EscM(0)"/>
	<format id="magenta"  format="%EscM(35)[%Level]%EscM(39) [%Time] [%EscM(35;1)%FuncShort %EscM(39) %EscM(;1)@ %File.%Line%EscM(;0)] %Msg%n%EscM(0)"/>
       	<format id="red"  format="%EscM(31)[%Level]%EscM(39) [%Time] [%EscM(32;1)%FuncShort %EscM(39) %EscM(;1)@ %File.%Line%EscM(;0)] %Msg%n%EscM(0)"/>
       	<format id="yellow"  format="%EscM(33)[%Level]%EscM(39) [%Time] [%EscM(33;1)%FuncShort %EscM(39) %EscM(;1)@ %File.%Line%EscM(;0)] %Msg%n%EscM(0)"/>
   	</formats>
</seelog>

