<seelog type="adaptive" mininterval="2000000" maxinterval="100000000" critmsgcount="50">
    <exceptions>
        <exception funcpattern="*test*" filepattern="tests.go"/>
        <exception filepattern="test*" minlevel="trace"/>
	</exceptions>
    <outputs>
        <splitter formatid="all">
            <file path="logs/rancher.log"/>
            <filter levels="critical, error, warn, info, debug, trace">
                <console formatid="colored"/>
            </filter>
        </splitter>
	</outputs>
	<formats>
		<format id="fmtinfo" format="[%Level] [%Time] %Msg%n"/>
        <format id="fmtdetail" format="[%LEV] [%Time] [%FuncShort @ %File.%Line] %Msg%n"/>
       	<format id="all" format="[%Lev] [%Time] [@ %File.%Line] %Msg%n"/>
       	<format id="colored"  format="%EscM(31)[%Level]%EscM(39) [%Time] [%FuncShort @ %File.%Line] %Msg%n%EscM(0)"/>
   	</formats>
</seelog>

